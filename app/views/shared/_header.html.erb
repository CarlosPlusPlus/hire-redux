<html lang="en">
<head>
    <meta charset="utf-8">
    <title>hireCRM</title>
</head>

<body>

<div id="wrapper">

	<!-- start header -->
	<header>	
		<div class="container">

			<div id="user_header" class="row nomargin">
			  <% if current_user %>
			    <span class = "pull-right">
			    	Logged in as <%= current_user.name %>&nbsp;&nbsp;
			    	<%= link_to "Log Out", session_path("current"), method: "delete", :class => "btn btn-warning" %>
			    </span>
			  <% else %>
							<span class = "pull-right">
								<%= link_to "Sign up", new_user_path, :class => "btn btn-success" %>&nbsp;&nbsp;<%= link_to "Log in", new_session_path, :class => "btn btn-primary" %>
							</span>
			   <% end %>
			</div>
			<div class="row nomargin">
				<div class="span3">
					<div class="logo">
						<%= link_to image_tag("logo.png"), "/" %>
					</div>
				</div>
				<div class="span9">
					<div class="navbar navbar-static-top">
						<div class="navigation">
							<nav>
								<ul class="nav topnav">
									<li>
										<%= link_to 'Home', root_path %>
									</li>
									<li>
										<%= link_to 'Companies', companies_path %>
									</li>
									<li class="dropdown">
										<%= link_to 'Jobs', jobs_path %>
										<ul class="dropdown-menu">
											<li><%= link_to 'Search Indeed', jobs_indeed_path %></li>
										</ul>
									</li>
									<li>
										<%= link_to 'Relationships', relationships_path %>
									</li>
									<li>
										<%= link_to 'Users', users_path %>
									</li>
									<li>
										<%= link_to 'Interviews', interviews_path %>
									</li>
									<li>
										<%= link_to 'Records', records_path %>
									</li>
								</ul>
							</nav>
						</div>
						<!-- end navigation -->
					</div>
				</div>
			</div>
		</div>
	</header>	
	<!-- end header -->
<%= form_for(@interview) do |f| %>
  <% if @interview.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@interview.errors.count, "error") %> prohibited this interview from being saved:</h2>

      <ul>
      <% @interview.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% if params[:job_id] %>
      <%= hidden_field_tag :job_id, params[:job_id] %>
    <% else %>
      <%= hidden_field_tag :user_id, params[:user_id] %>
    <% end %>

  </div>


  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <% if params[:job_id] %>
      <%= select_tag :user_id, options_from_collection_for_select(@users, "id", "name") %>
    <% else %>
      <%= select_tag :job_id, options_from_collection_for_select(@jobs, "id", "title") %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<%= render "shared/relationship_state", :state => @state, :relationship => @interview.relationship %>

<span class="pull-right">
  <p style="font-style: italic">
    <% unless @interview.relationship.nil? %>
      <% case @interview.relationship.aasm_state %>
      <% when "like" %>
        You like this job!
      <% when "start" %>
        You have no relationship with this job.
      <% else %>  
        <% unless @interview.nil? %>  
          <% case @interview.relationship.aasm_state %>
            <% when "interviewing" %>
                You have an interview scheduled with <%= @job.company.name %>! <%= link_to '[Update]', interview_path(@interview) %>
            <% when "pending" %>
              You interviewed with <%= @job.company.name %>! <%= link_to '[Update]', interview_path(@interview) %>
            <% when "company_decline" %>
              Talks with <%= @job.company.name %> didn't bear fruit. <%= link_to '[Update]', interview_path(@interview) %>
            <% when "offer_received" %>
              You received an offer from <%= @job.company.name %>! <%= link_to '[Update]', interview_path(@interview) %>
            <% when "offer_accepted" %>
              You accepted an offer from <%= @job.company.name %>! <%= link_to '[Update]', interview_path(@interview) %>
            <% else "offer_declined" %>
              You declined an offer from <%= @job.company.name %>. <%= link_to '[Update]', interview_path(@interview) %>
          <% end %>
        <% end%>
      <% end %>
    <% end %>
  </p>
</span>

<hr>

<h1>Interview Details for <%= link_to @interview.user.name, user_path(@interview.user) %></h1>

<div class="row-fluid sortable">

  <div class="box span3">
    <div class="box-content pagination-centered company_logo_div">
      <%= image_tag @interview.company.logo_url, :size => "200x200" %>
    </div>
  </div><!--/span-->
  <div class="box span4">
    <div class="box-header">
      <h2><i class="icon-th"></i><span class="break"></span>Interview Overview</h2>
    </div>
    <div class="box-content">
        <% if current_user.admin? %>
          <p><strong>Student</strong>: <%= @interview.user.name%></p>
        <% end %>
        <p><strong>Position</strong>: <%= @interview.job.title %></p>
        <p><strong>Interview Date</strong>:<%= @interview.date.strftime('%-m/%-d/%Y') %></p>
        <p><strong>Start Time</strong>: <%= @interview.start_time.strftime('%-l:%M %P') %></p>               
    </div>
  </div>
  <div class="box span5">
    <div class="box-content">
      <h1><%= @job.title %></h1>
      <p>
        <%= @job.description %>
      </p>               
     </div>
  </div>

</div>

<hr>

<%= link_to 'Edit Interview', edit_interview_path(@interview), :class => "btn btn-warning" %>
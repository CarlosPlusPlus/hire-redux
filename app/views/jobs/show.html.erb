<p id="notice"><%= notice %></p>

<% if @state.nil? || @state == "start" %>
  <%= link_to 'Like This Job', {:controller => :states, :action => :like_company}, :class => "btn btn-success status_btn" %>
<% else %> 
  <%= link_to 'Unlike This Job', {:controller => :states, :action => :unlike_company}, :class => "btn status_btn" %>
<% end %>

<%= link_to 'Add Interview', new_job_interview_path(@job), :class => "btn btn-info" %>

<span class="pull-right">
  <p style="font-style: italic">
    <% case @state %>
    <% when "like" %>
      You like this job!
    <% else %>
      You have no relationship with this job
    <% end %>
  </p>
</span>

<br>

<% if current_user.admin? %>
  <%= link_to 'Edit', edit_job_path(@job) %>
<% end %>



<hr>

<div class="row-fluid sortable">

  <div class="box span4">
    <div class="box-content pagination-centered company_logo_div">
      <%= image_tag @job.company.logo_url, :size => "200x200" %>
    </div>
  </div><!--/span-->
  <div class="box span8">
    <div class="box-content">
      <h1><%= @job.title %></h1>
      <p><%= @job.description %></p>               
     </div>
  </div><!--/span-->
</div><!--/row-->

     <select name="user_id">
       <% @users.each do |u|%>
         <option value=<%= u.id %>><%= u.name %></option>      
       <% end %>
     </select>
   </div>

  <div class="actions">
    <%= f.submit 'Create Interview', {:class => "btn btn-info"} %>
  </div>

<% end %>
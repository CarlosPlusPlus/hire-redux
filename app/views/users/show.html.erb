<h2><%= @user.name %></h2>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Phone:</b>
  <%= @user.phone %>
</p>

<h4>Upcoming Interviews</h4>
<% if @user.interviews.empty? %>
	<p><%= @user.name %> has no upcoming interviews.</p>
<% else %>
	<%= render :partial => "shared/interview_list", :locals => {:interview_obj => @user} %>
<% end %>



<h4>Job Relationships</h4>
<% if @user.relationships.empty? == true %>
	<p><%= @user.name %> has no relationships.</p>

<% else %>
<ul>
	<% @user.relationships.each do |relationship| %>
	<li> 
		<%= relationship.company.name %>, <%= relationship.aasm_state %>
	</li>
	<% end %>
</ul>
<% end %>

<h4>Event History</h4>
<% if @user.records.empty? == true %>
	<p><%= @user.name %> has no event history.</p>

<% else %>
<ul>
	<% @user.records.each do |record| %>
	<li> 
		<%= record.event %>
	</li>
	<% end %>
</ul>
<% end %>

<div style="border-bottom: 1px dotted; margin: 10px 0;"></div>
<%= link_to 'Edit Profile', edit_user_path(@user) %> 
<br/>
<%= link_to 'Add Interview', new_user_interview_path(@user), :class => "btn btn-info" %>


<div class="row-fluid sortable">
<h1><%= @user.name %></h1>
</div>
<hr>
<%= link_to 'Add Interview', new_user_interview_path(@user), :class => "btn btn-info" %>

<div class="row-fluid sortable">
        
  <div class="box span8">
    <div class="box-header">
      <h2><i class="icon-th"></i> Upcoming Interviews</h2>
    </div>
    <div class="box-content">
      <ul class="nav tab-menu nav-tabs" id="myTab">
        <li class="active"><a href="#calendar_tab">Calendar View</a></li>
        <li><a href="#list">List View</a></li>
      </ul>
       
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane active" id="calendar_tab">
          <div class="row-fluid">

            <%= render 'shared/calendar_embed' %>

          </div>
        </div>
        <div class="tab-pane" id="list">
          <div class="row-fluid sortable">    
            <div class="box span12">
              <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                  <thead>
                    <tr>
                      <th>Company Name</th>
                      <th>Job Title</th>
                      <th>Date</th>
                      <th>Time</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>   
                  <tbody>

                  <% if @user.interviews.empty? == true %>
                    <p><%= @user.name %> has no upcoming interviews.</p>
                  <% else %>

                    <% @user.interviews.each do |interview| %>

                      <tr>
                        <td><%= interview.company.name %></td>
                        <td><%= interview.job.title %></td>
                        <td><%= interview.date.strftime('%-m/%-d/%Y') %></td>
                        <td><%= interview.start_time.strftime('%-l:%M %P') %></td>
                        <td class="center">
                          <% if interview.relationship.aasm_state == "open_status" %> 
                            <span class="label label-info">
                              Liked
                            </span>
                          <% elsif interview.relationship.aasm_state == "pending" %>
                            <span class="label label-warning">
                              Update Status
                            </span>
                          <% elsif interview.relationship.aasm_state == "interviewing" %>
                            <span class="label label-success">
                              Interview Scheduled
                            </span>
                          <% elsif interview.relationship.aasm_state == "user_decline" %>
                            <span class="label label-inverse">
                              Student Declined
                            </span>
                          <% elsif interview.relationship.aasm_state == "company_decline" %>
                            <span class="label label-danger">
                              Company Declined
                            </span>
                          <% elsif interview.relationship.aasm_state == "offer_received" %>
                            <span class="label">
                              Offer Received
                            </span>
                          <% elsif interview.relationship.aasm_state == "offer_accepted" %>
                            <span class="label label-success">
                              Offer Accepted
                            </span>
                          <% elsif interview.relationship.aasm_state == "offer_declined" %>
                            <span class="label label-inverse">
                              Offer Declined
                            </span>
                          <% end %>

                        </td>
                        <td class="center">

                          <a class="btn btn-success" href="<%= interview_path(interview) %>">
                            <i class="icon-zoom-in icon-white"></i>  
                          </a>

                          <a class="btn btn-info" href="<%= edit_interview_path(interview) %>">
                            <i class="icon-edit icon-white"></i>  
                          </a>

                          <%= link_to raw('<i class="icon-trash icon-white"></i>'), interview, :class => 'btn btn-danger', :confirm => "Are you sure you want to delete this?", :method => :delete %>
                        </td>
                      </tr>
                    <% end %>
                  <% end %>
                  </tbody>
                </table>            
              </div>
            </div><!--/span-->
          </div><!--/row-->
        </div>
      </div>
    </div>
  </div><!--/span-->

  <div class="box span4">
    <div>
      <div class="box-header">
        <h2><i class="fa-icon-heart red"></i><span class="break"></span>Liked Jobs</h2>
      </div>
      <div class="box-content">
        <ul class="dashboard-list">
          
          <% company_likes(@user).each do |like| %>
            <li>
              <span class="dash_sidebar">
                  <%= link_to like.company.name, company_path(like.company), :class => "blue"%>
                - <strong><%= link_to like.job.title, job_path(like.job)%></strong> (<%= like.aasm_state %>)
              </span>
            </li>
          <% end %>

        </ul>
      </div>
    <hr><!-- end Liked Companies // begin News Feed-->
    <div>
      <div class="box-header">
        <h2><i class="fa-icon-rss green"></i><span class="break"></span>News Feed</h2>
      </div>
      <div class="box-content">
        <ul class="dashboard-list">
          <% @user.records.each do |record| %>
          <li>
            <!-- <i class="fa-icon-rss green">&nbsp;</i> -->
            <span class="dash_sidebar">
                <%= record.event.description[0..-2] %> for <strong><%= record.job %></strong> at <span class="blue"><%= record.company %></span>.
            </span>

          </li>
          <% end %>
        </ul>
      </div>

  </div>


</div>
<h1>Flatiron Students</h1>
<div class="row-fluid sortable">    
  <div class="box span12">
    <div class="box-header" data-original-title>
      <h2><i class="icon-user"></i><span class="break"></span>Student List</h2>
      <div class="box-icon">
        <a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
        <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
        <a href="#" class="btn-close"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="box-content">
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>   
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, user %></td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
               <td class="center">
              <a class="btn btn-success" href="<%= user_path(user) %>">
                <i class="icon-zoom-in icon-white"></i>  
              </a>
              <a class="btn btn-info" href="<%= edit_user_path(user) %>">
                <i class="icon-edit icon-white"></i>  
              </a>
                <%= link_to raw('<i class="icon-trash icon-white"></i>'), user, :class => 'btn btn-danger', :confirm => "Are you sure you want to delete this?", :method => :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>            
  </div>
</div>
<hr>
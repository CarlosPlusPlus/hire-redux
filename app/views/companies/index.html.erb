<h1>Companies in Network</h1>

<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header" data-original-title>
      <h2><i class="icon-picture"></i> Gallery</h2>
      <div class="box-icon">
        <a href="#" id="toggle-fullscreen" class="hidden-phone hidden-tablet"><i class="icon-fullscreen"></i></a>
        <a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
        <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
        <a href="#" class="btn-close"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="box-content">
      <div class="masonry-gallery">

      <% @companies.each_with_index do |company, i| %>
        <div id="image-<%= i %>" class="masonry-thumb">
          <a style="background:url(<%= company.logo_url %>); size: 200x200;" title="<%= company.name %>" href="<%= company_path(company) %>"><img class="grayscale" src="<%= company.logo_url %>"></a>
        </div>

      <% end %>
                      
      </div>
    </div>
  </div><!--/span-->

</div><!--/row-->

    <hr>
<!-- end: Content -->
</div><!--/#content.span10-->
  </div><!--/fluid-row-->
  
<div class="modal hide fade" id="myModal">
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">Ã—</button>
  <h3>Settings</h3>
</div>
<div class="modal-body">
  <p>Here settings can be configured...</p>
</div>
<div class="modal-footer">
  <a href="#" class="btn" data-dismiss="modal">Close</a>
  <a href="#" class="btn btn-primary">Save changes</a>
</div>
</div>

<div class="clearfix"></div>













<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td>&nbsp;  <%= link_to company.name, company %></td>
    <td>&nbsp;  <%= link_to company.website, company.website %></td>
    <% if current_user.admin? %>
      <td>&nbsp; | <%= link_to 'Edit', edit_company_path(company) %></td>
      <td>&nbsp; | <%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>


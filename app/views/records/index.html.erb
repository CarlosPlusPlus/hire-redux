<h1>CRM History</h1>
<table>
  <tr>
    <th>Time Stamp</th>
    <th>Event</th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.created_at.strftime("%B %d at %I:%M %p") %></td>
    <td><%= record.event.description %></td>
    <td><%= link_to 'Delete', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New Record', new_record_path, :class => "btn btn-info" %>
